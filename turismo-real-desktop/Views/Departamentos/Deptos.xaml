<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:turismo_real_desktop.Views.Administrador.Departamentos"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="turismo_real_desktop.Views.Administrador.Departamentos.Deptos"
        mc:Ignorable="d"
        Title="Turismo Real - Departamentos" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="153*"/>
        </Grid.ColumnDefinitions>
        <Rectangle HorizontalAlignment="Left" Height="434" Margin="495,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="270" Grid.Column="1"/>

        <Image HorizontalAlignment="Left" Height="76" Margin="592,29,0,0" VerticalAlignment="Top" Width="85" Source="/Assets/Normal/plus.png" Grid.Column="1"/>
        <mah:Tile x:Name="agregarbtn" Content="Agregar Depto" HorizontalAlignment="Left" Margin="531,129,0,0" VerticalAlignment="Top" Height="42" Width="198" FontWeight="Bold" FontSize="24" Grid.Column="1"/>
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Height="1
                " Margin="495,194,0,0" VerticalAlignment="Top" Width="270" Background="Black" Grid.Column="1"/>


        <mah:Tile x:Name="seleccionarbtn" Content="Seleccionar" HorizontalAlignment="Left" Margin="531,218,0,0" VerticalAlignment="Top" Height="42" Width="198" FontWeight="Bold" FontSize="24" Background="#CC178EA9" Grid.Column="1"/>
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Height="1
                " Margin="495,283,0,0" VerticalAlignment="Top" Width="270" Background="Black" Grid.Column="1"/>

        <mah:Tile x:Name="eliminarbtn" Content="Eliminar" HorizontalAlignment="Left" Margin="531,305,0,0" VerticalAlignment="Top" Height="42" Width="198" FontWeight="Bold" FontSize="24" Background="#CCC12C15" Grid.Column="1"/>

        <mah:Tile x:Name="volverbtn" Content="Volver" HorizontalAlignment="Left" Margin="531,382,0,0" VerticalAlignment="Top" Height="42" Width="198" FontWeight="Bold" FontSize="24" Grid.Column="1"/>
