        <Image HorizontalAlignment="Left" Height="28" Margin="685,389,0,0" VerticalAlignment="Top" Width="40" Source="/Assets/Normal/previous.png" Grid.Column="1" />
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Height="1
                " Margin="0,31,0,0" VerticalAlignment="Top" Width="530" Background="Black" Grid.ColumnSpan="2"/>
        <mah:Tile x:Name="deptosbtn" Content="Departamentos" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Height="27" Width="95" mah:ControlsHelper.MouseOverBorderBrush="{x:Null}" FontWeight="Bold" FontStyle="Normal" Foreground="White" Background="#FF3A3939" Grid.ColumnSpan="2"/>
        <mah:Tile x:Name="mantenbtn" Content="Mantenciones" HorizontalAlignment="Left" Margin="75,4,0,0" VerticalAlignment="Top" Height="27" Width="95" FontWeight="Bold" Foreground="White" Background="#FF3A3939" Grid.Column="1"/>
        <DataGrid x:Name="datagriddeptos" Margin="0,38,275,0" SelectionChanged="DataGrid_SelectionChanged" Grid.ColumnSpan="2"/>




    </Grid>
