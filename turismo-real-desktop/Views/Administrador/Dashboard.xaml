<Window x:Class="turismo_real_desktop.Views.Administrador.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:turismo_real_desktop.Views.Administrador"
        mc:Ignorable="d"
        Title="Dashboard" Height="516" Width="866">
    <Grid>
        <Label Content="Bienvenido { pnombre + papellido + sapellido }" FontSize="14" HorizontalAlignment="Left" Margin="19,24,0,0" VerticalAlignment="Top"/>
        

        <Grid Margin="0,0,0,0">
            <Rectangle x:Name="boxUser" HorizontalAlignment="Left" Height="170" Margin="37,80,0,0" Stroke="#FF22AE5F" VerticalAlignment="Top" Width="252" Cursor="Hand" MouseEnter="ChangeColor" MouseLeave="DechangeColor"/>
            <Image x:Name="imgUser" HorizontalAlignment="Left" Source="/Assets/Normal/users.png" Height="100" Margin="113,91,0,0" VerticalAlignment="Top" Width="100"/>
            <Label x:Name="lblUser" Content="USUARIOS" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left" Margin="113,207,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FF22AE5F"/>
        </Grid>

    </Grid>
</Window>
