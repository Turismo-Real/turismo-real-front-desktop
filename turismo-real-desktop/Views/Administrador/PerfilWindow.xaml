            <ComboBox x:Name="cboxPais" HorizontalAlignment="Left" Margin="503,54,0,0" VerticalAlignment="Top" Width="250" SelectionChanged="PaisChanged"/>
            <ComboBox x:Name="cboxRegion" HorizontalAlignment="Left" Margin="503,85,0,0" VerticalAlignment="Top" Width="250" SelectionChanged="RegionChanged"/>
            <ComboBox x:Name="cboxComuna" HorizontalAlignment="Left" Margin="503,116,0,0" VerticalAlignment="Top" Width="250"/>
            <TextBox x:Name="txtCalle" HorizontalAlignment="Left" Margin="503,147,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <TextBox x:Name="txtNumero" HorizontalAlignment="Left" Margin="503,178,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <TextBox x:Name="txtDepto" HorizontalAlignment="Left" Margin="503,209,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <TextBox x:Name="txtCasa" HorizontalAlignment="Left" Margin="503,240,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <Label Content="Primer Nombre:" HorizontalAlignment="Left" Margin="47,53,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Segundo Nombre:" HorizontalAlignment="Left" Margin="36,85,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Primer Apellido:" HorizontalAlignment="Left" Margin="47,115,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Segundo Apellido:" HorizontalAlignment="Left" Margin="36,146,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Fecha de nacimiento:" HorizontalAlignment="Left" Margin="20,176,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Correo electrónico:" HorizontalAlignment="Left" Margin="32,208,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Teléfono móvil:" HorizontalAlignment="Left" Margin="52,239,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Teléfono fijo:" HorizontalAlignment="Left" Margin="64,270,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Género:" HorizontalAlignment="Left" Margin="95,300,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
